<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_green"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardElevation="12dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/product_name_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_margin="10dp"
                android:text="Product Name:"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
               />

            <TextView
                android:id="@+id/product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Name"
                android:textSize="18sp"
                android:layout_margin="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/product_name_view"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/product_price_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Price:"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_margin="10dp"
                app:layout_constraintTop_toBottomOf="@+id/product_name_view"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Price"
                android:textSize="18sp"
                android:layout_margin="10dp"
                app:layout_constraintTop_toBottomOf="@+id/product_name"
                app:layout_constraintStart_toEndOf="@+id/product_price_view"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:id="@+id/product_quantity_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Quantity:"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_margin="10dp"
                app:layout_constraintTop_toBottomOf="@+id/product_price_view"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/product_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Quantity"
                android:textSize="18sp"
                android:layout_margin="10dp"
                app:layout_constraintTop_toBottomOf="@id/product_price"
                app:layout_constraintStart_toEndOf="@+id/product_quantity_view"
                app:layout_constraintEnd_toEndOf="parent"/>



            <TextView
                android:id="@+id/purchased_from_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Purchased from:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                app:layout_constraintTop_toBottomOf="@id/product_quantity_view"
                app:layout_constraintStart_toStartOf="parent"
               />

            <TextView
                android:id="@+id/purchased_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Purchased from"
                android:textSize="18sp"
                android:layout_margin="10dp"
                app:layout_constraintTop_toBottomOf="@id/product_quantity"
                app:layout_constraintStart_toEndOf="@+id/purchased_from_view"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/purchased_date_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Purchase date:"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_margin="10dp"
                app:layout_constraintTop_toBottomOf="@id/purchased_from_view"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/purchased_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Purchase date"
                android:textSize="18sp"
                android:layout_margin="10dp"
                app:layout_constraintTop_toBottomOf="@id/purchased_from"
                app:layout_constraintStart_toEndOf="@+id/purchased_date_view"
                app:layout_constraintEnd_toEndOf="parent"/>
     </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>